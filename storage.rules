rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    match /{allPaths=**} {
      // Allow public read for all images (blog, projects, assets)
      allow read: if true;
      // Only admin can upload/delete
      allow write: if isAdmin();
    }
  }
}
